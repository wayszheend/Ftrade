<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Skip rewrite for actual files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Rewrite all requests to api/index.php
    RewriteRule ^api/(.*)$ api/index.php [QSA,L]
</IfModule>
